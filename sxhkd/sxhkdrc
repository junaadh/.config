#Terminal
super + Return
	kitty

#Program launcher
super + r
	rofi -modi drun -show drun -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar -terminal xfce4-terminal \
                -show-icons -drun-icon-theme "Arc-X-D" -font "Droid Sans Regular 10"

super + p
  dmenu_run

#firefox
super + f
	firefox

#chrome
super + c
	google-chrome-stable

#open-window switcher
super + ctrl + r
	rofi -modi drun -show ssh -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar -terminal xfce4-terminal \
                -show-icons -drun-icon-theme "Arc-X-D" -font "Droid Sans Regular 10"

#filemanager
super + Home
	nemo

super + shift + Home
	alacritty -e $(echo "123456" | sudo -S thunar)

#Restart bspwm
super + F5
	bspc wm -r

#Restart sxhkd
super + F6
	pkill -USR1 -x sxhkd

#Restart polybar
super + F7
	~/.config/polybar/launch.sh

#Restart bashrc
super + F8
	~/scripts/bash_reset.sh

#power-menu
super + Escape
	~/.config/polybar/scripts/powermenu.sh

#quit selected tab
super + q
	bspc node -c

#kill selected app
super + shift + q
	bspc node -k

#Set the window state
super + shift +  {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

#Focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#Preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + Print
  scrot

#Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

#Cancel the preselection for the focused desktop
super + alt + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

#Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

#Move a floating window
super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#Screenshot
Print
  scrot ~/Pictures/Screenshot-$(date +%F_%T).png

super+Print
  ~/.config/bspwm/scripts/screenshot.sh

#Keybindings Help
super + F1
  ~/.config/bspwm/scripts/keybindings_rofi.sh

#Volume up/down
ctrl + {KP_Add,KP_Subtract}
	pactl -- set-sink-volume 0 {+10%,-10%}

#Volume mute/unmute
ctrl + KP_Multiply
	pactl set-sink-mute 0 toggle

#Mic volume up/down
ctrl + shift  + {KP_Add,KP_Subtract}
	pactl --  set-source-volume 1 {+10%,-10%}

#Mic volume mute/unmute
ctrl + shift + KP_Multiply
	pactl -- set-source-mute 1 toggle
